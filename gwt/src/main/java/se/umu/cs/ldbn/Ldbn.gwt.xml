<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN" "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module>

    <source path="client"/>
    <source path="shared"/>

    <!-- Inherit the core Web Toolkit stuff. -->
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="com.google.gwt.xml.XML"/>
    <inherits name="com.google.gwt.http.HTTP"/>
    <inherits name="com.google.gwt.i18n.I18N"/>
    <inherits name="com.google.gwt.inject.Inject"/>

    <!-- Add RestyGWT for easy rest calls -->
    <inherits name="org.fusesource.restygwt.RestyGWT"/>

    <!-- Add GWT D'n'D -->
    <inherits name="com.allen_sauer.gwt.dnd.gwt-dnd"/>

    <!-- Add gwt-log support -->
    <inherits name="com.allen_sauer.gwt.log.gwt-log-DEBUG"/>

    <!-- Inherit the default GWT style sheet.  You can change       -->
    <!-- the theme of your GWT application by uncommenting          -->
    <!-- any one of the following lines.                            -->
    <!-- <inherits name='com.google.modeluser.theme.standard.Standard'/> -->
    <!-- <inherits name='com.google.modeluser.theme.chrome.Chrome'/> -->
    <!-- <inherits name='com.google.modeluser.theme.dark.Dark'/>     -->

    <!-- Specify the app entry point class. -->
    <entry-point class='se.umu.cs.ldbn.client.ClientMain'/>
</module>
